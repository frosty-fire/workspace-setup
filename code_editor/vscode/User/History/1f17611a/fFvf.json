{
    "workbench.colorTheme": "GitHub Dark",

    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    
    "editor.tabSize": 2,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        
        "**/.idea": true,
    },

    /*
        Turn off some features:
        Zoom: `window.zoomLevel`
            - Ctrl = : increase the zoom level
            - Ctrl - : decrease the zoom level
            - Ctrl 0 : reset the zoom level to 0
        High Contrast
        Colorblind
        Screen reader
        etc.
    */
    // "editor.accessibilitySupport": "off",

    // "outline.showKeys": false,
    // "inlineChat.showDiff": false,


    "files.autoSave": "onFocusChange",
    "window.newWindowProfile": "Default",
}